/* 颜色变量 */
.k-small-title {
  font-weight: bold;
  font-size: 40rpx;
  padding-left: 50rpx;
  line-height: 100rpx;
  position: relative;
}
.k-small-title::after {
  content: '';
  width: 60rpx;
  height: 20rpx;
  border-radius: 6rpx;
  background-color: rgba(48, 198, 176, 0.4);
  z-index: -1;
  position: absolute;
  right: 10rpx;
  bottom: -6rpx;
}
.k-title {
  font-weight: bold;
  font-size: 60rpx;
  padding: 0 50rpx;
  line-height: 150rpx;
  position: relative;
}
.k-title::after {
  content: '';
  width: 90rpx;
  height: 30rpx;
  border-radius: 10rpx;
  background-color: rgba(48, 198, 176, 0.4);
  z-index: -1;
  position: absolute;
  right: 34rpx;
  bottom: -4rpx;
}
.empty {
  width: 100%;
  height: calc(100vh - 400rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-img {
  width: 50%;
}
.empty-text {
  font-size: 40rpx;
  letter-spacing: 2rpx;
  color: rgba(0, 0, 0, 0.3);
}
.k-active {
  transition: all 0.3s ease;
}
.k-hover {
  transition: all 0.2s ease;
}
.k-hover:active {
  -webkit-filter: brightness(90%);
          filter: brightness(90%);
}
.k-active:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.k-hideText {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page {
  background-color: #F5f5f5;
}
.notifacation {
  width: calc(100% - 100rpx);
  margin: 30rpx auto;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.notifacation-info {
  width: calc(100% - 150rpx);
  padding: 0 20rpx;
  height: 100%;
}
.notifacation-info .info-main {
  height: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.notifacation-info .info-main .info-special {
  color: #30c6b0;
}
.notifacation-opration {
  display: flex;
  justify-content: center;
  align-items: center;
}
.notifacation-opration .opration-icon {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.notifacation-opration .allow {
  border: 4rpx solid green;
  color: green;
  margin-right: 16rpx;
}
.notifacation-opration .deny {
  border: 4rpx solid red;
  color: red;
}
