/* 颜色变量 */
.k-small-title {
  font-weight: bold;
  font-size: 40rpx;
  padding-left: 50rpx;
  line-height: 100rpx;
  position: relative;
}
.k-small-title::after {
  content: '';
  width: 60rpx;
  height: 20rpx;
  border-radius: 6rpx;
  background-color: rgba(48, 198, 176, 0.4);
  z-index: -1;
  position: absolute;
  right: 10rpx;
  bottom: -6rpx;
}
.k-title {
  font-weight: bold;
  font-size: 60rpx;
  padding: 0 50rpx;
  line-height: 150rpx;
  position: relative;
}
.k-title::after {
  content: '';
  width: 90rpx;
  height: 30rpx;
  border-radius: 10rpx;
  background-color: rgba(48, 198, 176, 0.4);
  z-index: -1;
  position: absolute;
  right: 34rpx;
  bottom: -4rpx;
}
.empty {
  width: 100%;
  height: calc(100vh - 400rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-img {
  width: 50%;
}
.empty-text {
  font-size: 40rpx;
  letter-spacing: 2rpx;
  color: rgba(0, 0, 0, 0.3);
}
.k-active {
  transition: all 0.3s ease;
}
.k-hover {
  transition: all 0.2s ease;
}
.k-hover:active {
  -webkit-filter: brightness(90%);
          filter: brightness(90%);
}
.k-active:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.k-hideText {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.swiper {
  height: 90vh;
}
.swiper-item {
  height: 90vh;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.swiper-item .intro-img {
  width: 650rpx;
  height: 650rpx;
}
.swiper-item .intro-title {
  align-self: flex-start;
  padding-left: 20rpx;
  font-size: 50rpx;
  letter-spacing: 2rpx;
  line-height: 100rpx;
  color: #30c6b0;
}
.swiper-item .intro-describe {
  align-self: flex-start;
  padding-left: 20rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  color: #888;
  letter-spacing: 2rpx;
}
.forward-btn {
  width: 200rpx;
  height: 120rpx;
  border-radius: 56rpx;
  position: fixed;
  bottom: 5vh;
  right: 50rpx;
  background-color: #30c6b0;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 20rpx -10rpx #30c6b0;
}
.forward-btn .next-icon {
  width: 40rpx;
  height: 40rpx;
}

