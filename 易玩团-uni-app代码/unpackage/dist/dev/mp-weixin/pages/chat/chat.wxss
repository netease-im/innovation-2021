@charset "UTF-8";
/* 引入全局scss文件 */
/* 颜色变量 */
.k-small-title {
  font-weight: bold;
  font-size: 40rpx;
  padding-left: 50rpx;
  line-height: 100rpx;
  position: relative;
}
.k-small-title::after {
  content: '';
  width: 60rpx;
  height: 20rpx;
  border-radius: 6rpx;
  background-color: rgba(48, 198, 176, 0.4);
  z-index: -1;
  position: absolute;
  right: 10rpx;
  bottom: -6rpx;
}
.k-title {
  font-weight: bold;
  font-size: 60rpx;
  padding: 0 50rpx;
  line-height: 150rpx;
  position: relative;
}
.k-title::after {
  content: '';
  width: 90rpx;
  height: 30rpx;
  border-radius: 10rpx;
  background-color: rgba(48, 198, 176, 0.4);
  z-index: -1;
  position: absolute;
  right: 34rpx;
  bottom: -4rpx;
}
.empty {
  width: 100%;
  height: calc(100vh - 400rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-img {
  width: 50%;
}
.empty-text {
  font-size: 40rpx;
  letter-spacing: 2rpx;
  color: rgba(0, 0, 0, 0.3);
}
.k-active {
  transition: all 0.3s ease;
}
.k-hover {
  transition: all 0.2s ease;
}
.k-hover:active {
  -webkit-filter: brightness(90%);
          filter: brightness(90%);
}
.k-active:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.k-hideText {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.operationContainer {
  width: calc(100% - 40rpx);
  padding: 40rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}
.operationContainer .operation {
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.operationContainer .operation text {
  color: #888;
  letter-spacing: 4rpx;
  font-size: 28rpx;
}
.operationContainer .iconContainer {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 120rpx;
}
.operationContainer .like {
  background-color: #fff1cf;
  box-shadow: 0rpx 4rpx 14rpx 0rpx #fff1cf;
}
.operationContainer .like text {
  color: #fca235;
  font-size: 60rpx;
}
.operationContainer .message {
  background-color: #cce2fd;
  box-shadow: 0rpx 4rpx 14rpx 0rpx #cce2fd;
}
.operationContainer .message text {
  color: #3e8bf8;
  font-size: 60rpx;
}
.operationContainer .friends {
  background-color: #c3f5e3;
  box-shadow: 0rpx 4rpx 14rpx 0rpx #c3f5e3;
}
.operationContainer .friends text {
  color: #06cc76;
  font-size: 60rpx;
}
.operationContainer .audit {
  background-color: #d5d9f8;
  box-shadow: 0rpx 4rpx 14rpx 0rpx #d5d9f8;
}
.operationContainer .audit text {
  color: #635df7;
  font-size: 60rpx;
}
.operationContainer .iconContainer image {
  width: 55rpx;
  height: 55rpx;
}
.chat-cell {
  margin-top: 30rpx;
}
.chat-container {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 50rpx;
  line-height: 60rpx;
}
.chat-container .chat-img {
  width: 120rpx;
  height: 120rpx;
  background-color: #eee;
  border-radius: 30rpx;
  margin: 0;
}
.chat-container .chat-avatar-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.chat-container .chat-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  margin: 5rpx;
  background-color: rgba(48, 198, 176, 0.3);
  color: #30c6b0;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.chat-container .chat-content {
  width: calc(100% - 260rpx);
  text-align: left;
}
.chat-container .chat-content .chat-name {
  font-size: 32rpx;
  color: #444;
}
.chat-container .chat-content .chat-message {
  width: 400rpx;
  font-size: 24rpx;
  color: #888;
}
.chat-container .chat-info {
  width: 100rpx;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.chat-container .chat-info .chat-time {
  font-size: 24rpx;
  color: #888;
}
.chat-container .chat-info .chat-unread {
  width: 50rpx;
  height: 50rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 58, 61, 0.3);
  color: #ff3a3d;
  text-align: center;
  line-height: 50rpx;
  margin-top: 0;
}

