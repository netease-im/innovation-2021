{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "types": [
      "webpack-env",
      "jest",
      "meteor"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "./type/*",
        "*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}